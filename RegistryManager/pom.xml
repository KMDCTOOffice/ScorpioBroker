<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>registry-manager</artifactId>
	<name>RegistryManager</name>
	<packaging>jar</packaging>
	<parent>
		<groupId>eu.neclab.ngsildbroker</groupId>
		<artifactId>broker-parent</artifactId>
		<version>5.0.3-SNAPSHOT</version>
		<relativePath>../BrokerParent</relativePath>
	</parent>
	<dependencies>
		<dependency>
			<groupId>eu.neclab.ngsildbroker</groupId>
			<artifactId>commons</artifactId>
		</dependency>
		<dependency>
			<groupId>io.quarkus</groupId>
			<artifactId>quarkus-scheduler</artifactId>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>sqs</id>
			<activation>
				<property>
					<name>sqs</name>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>eu.neclab.ngsildbroker</groupId>
					<artifactId>sns-fanout-messaging</artifactId>
				</dependency>
			</dependencies>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-compiler-plugin</artifactId>
						<configuration>
							<excludes>
								<exclude>
                                    eu/neclab/ngsildbroker/queryhandler/messaging/QueryManagerMessagingByteArray.java
                                </exclude>
								<exclude>
                                    eu/neclab/ngsildbroker/queryhandler/messaging/QueryManagerMessagingInMemory.java
                                </exclude>
							</excludes>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>nativedocker</id>
			<activation>
				<property>
					<name>nativedocker</name>
				</property>
			</activation>
			<properties>
				<quarkus.native.container-build>true</quarkus.native.container-build>
			</properties>
		</profile>
		<profile>
			<id>docker</id>
			<activation>
				<property>
					<name>docker</name>
				</property>
			</activation>
			<properties>
				<quarkus.container-image.build>true</quarkus.container-image.build>
				<quarkus.container-image.name>${project.artifactId}</quarkus.container-image.name>
				<quarkus.container-image.tag>${docker-tag}</quarkus.container-image.tag>
				<quarkus.container-image.registry>scorpiobroker</quarkus.container-image.registry>
				<quarkus.container-image.group></quarkus.container-image.group>
			</properties>
		</profile>
	</profiles>
</project>